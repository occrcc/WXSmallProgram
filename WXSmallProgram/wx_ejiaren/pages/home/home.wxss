.item_view {
    display: flex;
    width: 45.5%;
    margin-left: 3%;
    margin-top: 25rpx;
    height: 380rpx;
    background-color: white;
    border-radius: 10rpx;
    box-shadow: 5rpx 0rpx 15rpx rgba(0, 0, 1, 0.1);
    flex-direction: column;
    align-items: center;
}

.footView {
    background: white;
    width: 90%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 20rpx;
    color: #B4ABAB;
    margin-top: 5rpx;
    background: white;
}
.foot_icon {
    width: 24rpx;
    height: 24rpx;
    margin-right: 6rpx;
}
.foot_item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.text_view {
    margin-top: 65rpx;
    background: white;
    flex-direction: column;
    display: flex;
    width: 90%;
    align-items: center;
    border-bottom: solid rgba(229,229,229,1) 1rpx;
    line-height: 34rpx;
    margin-bottom: 1rpx;
    
}
.content_view {
    background: white;
    height: 240rpx;
    width: 100%;
    flex-direction: column;
    display: flex;
    align-items: center;
    background: white;
}

.teacher_img {
    width: 120rpx;
    height: 120rpx;
    border-width: 10rpx;
    border-color: white;
    border-style: solid;
    border-radius: 80rpx;
    position: absolute;
    margin-top: 65rpx;
}

.head_img {
    width: 100%;
    height: 135rpx;
}

.warp {
    width: 100%;
    height: 100%;
    background: white;
}

.warp image {
    width: 100%;
    height: 110%;
    position: fixed;
    top:-30rpx;
}


.loading {
  margin-top: 20rpx;
  padding: 10rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 24rpx;
  display: flex;
  font-size: 24rpx;
  color: #8a8a8a;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 30rpx;
  height: 30rpx;
  background:url(http://pic.ejiarens.com/wx/icon-loading.gif) no-repeat;
  /* background-size: contain; */
  /* animation: rotate 1s linear infinite; */
}

.loading.complete:before {
  display: none;
}


.modelView {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  justify-content: center;
  align-items: center;
  display: flex;
}

.modelCenterView {
  width: 84%;
  background: white;
  border-radius: 10rpx;
  flex-direction: column;
}
.titleView {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border-bottom: 1rpx rgb(222, 222, 222) solid; 
}

.sqBtnView {
  width: 100%;
  height: 80rpx; 
  display: flex;
  align-items: center;
  color:black;
  font-size:30rpx; 
  flex-direction: row;
  justify-content: space-between;
}
.btnItem{
  width: 50%;
  height: 80rpx; 
  justify-content: center; 
  display: flex;
  align-items: center; 
  text-align: center; 
  
}

button::after{
  border: none;
}
