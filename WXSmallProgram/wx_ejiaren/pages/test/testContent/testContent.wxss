.baseContainer {
  width: 100%;
  height: 100%;
  background: #fedb57;
  position: fixed;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.base_scroll {
  position: fixed;
  width: 100%;
  height: 100%;
  background: transparent;
  top: 0;
  z-index: 999;
}


.footImgStyle {
  width: 100%;
  height: 220rpx;
  position: absolute;
  bottom: 0;
  z-index: 0;
}


.headView {
  width: 100%;
  flex-direction: row;
  display: flex;
  margin-top: 80rpx;
}

.ognzLogo {
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  border-radius: 50rpx;
}

.biaoStyle {
  flex-direction: row;
  display: flex;
  width: 76%;
  margin-top: 14rpx;
  
}

.logoStyle {
  width: 20%;
  height: 20%;
}

.sanjiao {
  width: 30rpx;
  height: 30rpx;

}

.titleContentView {
  font-size:30rpx;
  color: #1F1F1F;
  background: white;
  padding: 30rpx;
  line-height:50rpx;
  border-radius:10rpx;
  margin-left: -10rpx;
}

.anserLetterItem {
  width: 80%;
  background: #FFFAE9;
  padding: 30rpx;
  font-size:30rpx;
  color: #1F1F1F;
  line-height:44rpx;
  border-radius:10rpx;
  box-shadow: 8rpx 8rpx 15rpx rgba(66, 58, 27, 1);
  margin-top: 46rpx;
  
}

.itemsView {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.huanBtnView {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 84rpx;
  height: 80rpx;
}

.huanBtnView button{
  background: #5796FE;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 350rpx;
  height: 77rpx;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: white;
  box-shadow: 8rpx 8rpx 15rpx rgba(93, 31, 31, 1);
}

button::after{
  border: none;
}

button::before {
  border: none;
}

