.baseContainer {
  width: 100%;
  height: 100%;
  background: #fedb57;
  position: fixed;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.headView {
  width: 80%;
  height: 526rpx;
  background: #423A1B;
  border-radius:10rpx;
  margin-top: 63rpx;
}

.headContentView {
  width: 100%;
  height: 526rpx;
  background: white;
  border-radius:10rpx;
  margin-top: -10rpx;
  margin-left: -10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.touxiang {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 28rpx;
  
  
}

.touxiang image {
  width: 120rpx;
  height: 120rpx;
  border: solid 10rpx #33A7FA;
  border-radius: 70rpx;
  

  /* width: 96rpx;
