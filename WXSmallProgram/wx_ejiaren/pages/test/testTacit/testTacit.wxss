}

.jinduView {
  width: 86%;
  height: 50rpx; 
  border-radius: 35rpx;
  background: rgb(48, 80, 217);
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;

}

.jinduView image{
  width: 20%;
  height: 100%;
  border-radius: 25rpx;
}

.topViewStyle {
  width: 100%;
  top: 630rpx;
  bottom: 90rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.phTitleStyle {
  color: #242424;
  font-size:30rpx;
  font-weight: bold;
  margin-top: 10rpx;
  height: 20%;

}
.topScrollView {
  margin: 10rpx;
  width: 100%;
  height: 80%;

}

.topItemViewSteyle {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  padding-left: 50rpx;
  margin-top: 25rpx;
  
  
}

.footViewStyle {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
