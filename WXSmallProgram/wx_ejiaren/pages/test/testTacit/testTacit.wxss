  flex-direction: row;
}

.leftView {
  width: 50%;
  height: 100%;
  background: #E86363;
}

.showAnswerBtnStyle {
  width: 100%;
  height: 100%;
  font-size:30rpx;
  display: flex;
  justify-content: center;
