.container {
  background: rgba(255, 255, 255, 1);
  width: 100%;
  height: 100%;
}

.warp {
  width: 100%;
  height: 100%;
}

.warp image {
  width: 100%;
  height: 100%;
  position: fixed;
}

.base_scroll {
  position: absolute;
  width: 100%;
  height: 100%;
  background: transparent;
  top: 0;
  justify-content: center;
  align-items: center;
  display: flex;
}

.contentView {
  flex-direction: column;
  width: 50%;
  justify-content: center;
  align-items: center;
  display: flex;
}

.waiView {
  width: 222rpx;
  height: 600rpx;
  border: 10rpx solid #983C3C;
  justify-content: center;
  align-items: center;
  display: flex;
}

.neiView {
  width: 195rpx;
  height: 560rpx;
  border: 5rpx solid #983C3C;
  justify-content: center;
  align-items: center;
  display: flex;
  background: #f4ebc8;
  /* padding: 15rpx; */

}

.neiView text{
  writing-mode: tb-rl;
  color: #DF3836;
  text-align: left;
  font-size: 48rpx;
  margin: 15rpx;
  font-weight: bold;
}

.piyueClass {
  margin-top: 40rpx;
  width: 312rpx;
  height: 65rpx;
}

.piyueClass image{
  width: 312rpx;
  height: 65rpx;
}

button::after {
  border: none;
}
